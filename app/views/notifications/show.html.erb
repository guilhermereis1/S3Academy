<p id="notice"><%= notice %></p>

<div class="card text-center">
  <div class="card-header">
    <%= @notification.name %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @notification.content %></p>
    <%= link_to 'Editar', edit_notification_path(@notification), class: "btn btn-warning" %> | <%= link_to 'Voltar', notifications_path, class: "btn btn-secondary" %>
  </div>
  <div class="card-footer text-muted">
    <%= @notification.created_at.to_s(:date_time_env) %>
  </div>
</div>