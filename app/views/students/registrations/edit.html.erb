<h2 class="text-center">Editar Minha Conta</h2>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "students/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-2">
      <%= render 'card' %>
    </div>

    <div class="col-md-10">
      <%= render 'fields', f: f %>

      <div>
        <br>
        <%= f.submit "Atualizar", class: 'btn btn-primary' %> | <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>