<% if section.position == 1 then %>
  <button class="btn btn-secondary" disabled>Mover Sess達o para Cima</button>
<% else %>
  <%= link_to move_section_to_up_path(@course.id, section.id), class: "btn btn-secondary" do %>
    Mover Sess達o para Cima <i class="bi bi-arrow-up"></i>
  <% end %>
<% end %>

<% if @course.sections.maximum(:position) == section.position then %>
  <button class="btn btn-secondary" disabled>Mover Sess達o para Baixo</button>
<% else %>
  <%= link_to move_section_to_bottom_path(@course.id, section.id), class: "btn btn-secondary" do %>
    Mover Sess達o para Baixo <i class="bi bi-arrow-down"></i>
  <% end %>
<% end %>