<% if !notice.nil? %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>

<h2>Informações do Usuário</h2>
<hr>
<%= form_tag dashboard_user_save_student_path(@student.id), local: true do %>
  <div class="row">
    <div class="col-md-12">
      <label for="">Email</label>
      <%= text_field_tag :email, @student.email, class: "form-control", placeholder: "Email do usuário", disabled: true %>
    </div>
    <div class="col-md-6">
      <label for="">Senha</label>
      <%= password_field_tag :password, "", class: "form-control", placeholder: "Senha aqui" %>
    </div>
    <div class="col-md-6">
      <label for="">Confirmação de Senha</label>
      <%= password_field_tag :password_confirmation, "", class: "form-control", placeholder: "Senha aqui" %>
    </div>
  </div>
  <br>
  <%= submit_tag "Atualizar", class: "btn btn-success" %>
<% end %>