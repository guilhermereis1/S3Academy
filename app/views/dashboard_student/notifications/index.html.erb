<h2>Notificações (<%= @notifications.count %>)</h2>
<hr>

<% @notifications.each do |notification| %>
  <div class="card">
    <div class="card-header">
      <b><%= notification.name %></b>
    </div>
    <div class="card-body">
      <p class="card-text"><%= notification.content %></p>
    </div>
    <div class="card-footer text-muted">
      Publicado em: <b><%= notification.created_at.to_s(:date_time_env) %></b>
    </div>
  </div>
  <br>
<% end %>